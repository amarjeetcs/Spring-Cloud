package com.spring.cloud.ribbon.load.balancing;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@SpringBootApplication
@RestController
@RequestMapping("/load-balancing-using-cloud-ribbon")
public class ChatbookServiceApplication {

	@Value("${port}")
	private String port;
	public String chatNow()
	{
		return "This application is up on port"+port;
	}
	public static void main(String[] args) {
		SpringApplication.run(ChatbookServiceApplication.class, args);
	}

}
